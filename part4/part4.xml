<?xml version="1.0"?>

<utilityTools>
    <tool name="Unit Converter" id="0">
        <input id="input" numInstance="2"></input>
        <select id="units" numInstance="2">
            <option baseVal="1000" type="Length">Kilometre</option>
            <option baseVal="1" type="Length">Metre</option>
            <option baseVal="0.01" type="Length">Centimetre</option>
            <option baseVal="0.001" type="Length">Millimetre</option>
            <option baseVal="0.000001" type="Length">Micrometre</option>
            <option baseVal="0.000000001" type="Length">Nanometre</option>
            <option baseVal="0.3048" type="Length">Feet</option>
            <option baseVal="0.0254" type="Length">Inches</option>

            <option baseVal="1000000" type="Weight">Tonne</option>
            <option baseVal="1000" type="Weight">Kilogram</option>
            <option baseVal="1" type="Weight">Gram</option>
            <option baseVal="0.001" type="Weight">Milligram</option>
            <option baseVal="453.592" type="Weight">Pound</option>
            <option baseVal="28.3495" type="Weight">Ounce</option>

            <option baseVal="2590000" type="Area">Square Mile</option>
            <option baseVal="1000000" type="Area">Square Kilometre</option>
            <option baseVal="1" type="Area">Square Metre</option>
            <option baseVal="0.092903" type="Area">Square Foot</option>
            <option baseVal="0.00064516" type="Area">Square Inch</option>
            <option baseVal="4046.86" type="Area">Acre</option>

            <option baseVal="0.001" type="Volume">Millilitre</option>
            <option baseVal="0.284131" type="Volume">Imperial Cup</option>
            <option baseVal="0.568261" type="Volume">Imperial Pint</option>
            <option baseVal="1" type="Volume">Litre</option>
            <option baseVal="1.13652" type="Volume">Imperial Quart</option>
            <option baseVal="4.54609" type="Volume">Imperial Gallon</option>
            <option baseVal="28.3168" type="Volume">CubicFoot</option>
        </select>
        <select2 id="type" numInstance="1" classList="group1 group2">
            <option>Length</option>
            <option>Weight</option>
            <option>Area</option>
            <option>Volume</option>
        </select2>
    </tool>
    <tool name="Mortgage Calculator" id="1">
        <h1 class="title1">Mortgage Calculator</h1>
        <label>Principal </label>
        <input type="number" id="principal" step="any"></input>
        <br />
        <label>Monthly Interest Rate </label>
        <input type="number" id="monthlyInterestRate" step="any"></input>
        <br />
        <label>Number of Payments</label>
        <input type="number" id="numberOfPayments" step="any"></input>
        <br />
        <label id="mortgageLabel">Awaiting Inputs</label>
    </tool>
    <tool name="Random Color Generator" id="2">
        <h1 class="title1">Random Color Generator</h1>
        <button id="colorGenerateButton" class="whiteButton">Generate a Color!</button>
        <div id="colorDiv"></div>
        <label id="colorLabel"></label>
    </tool>
</utilityTools>